<Window x:Class="VisualizadorImágenesWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VisualizadorImágenesWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinHeight="450" MinWidth="800">
    <Grid>
        <Menu FlowDirection="LeftToRight">
            <MenuItem Header="Archivo" x:Name="Archivo" >
                <MenuItem x:Name="abrirImagen" Header="Abrir Imagen" Click="abrir_Click"></MenuItem>
                <MenuItem x:Name="abrirReciente" Header="Abrir Reciente..."></MenuItem>
            </MenuItem>
            <MenuItem Header="Ayuda" x:Name="ayuda">
                <MenuItem x:Name="acercaDe" Header="Acerca de..."></MenuItem>
            </MenuItem>
        </Menu>

        <Grid Margin="10,20,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="25*"/>
            </Grid.ColumnDefinitions>
            <Frame Grid.ColumnSpan="2" >

            </Frame>
        </Grid>

    </Grid>
</Window>
