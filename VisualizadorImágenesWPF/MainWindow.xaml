<Window x:Class="VisualizadorImágenesWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VisualizadorImágenesWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Menu FlowDirection="LeftToRight">
            <MenuItem Header="Archivo" x:Name="Archivo">
                <MenuItem x:Name="abrirImagen" Header="Abrir Imagen"></MenuItem>
                <MenuItem x:Name="abrirReciente" Header="Abrir Reciente..."></MenuItem>
            </MenuItem>
            <MenuItem Header="Ayuda" x:Name="ayuda">
                <MenuItem x:Name="acercaDe" Header="Acerca de..."></MenuItem>
            </MenuItem>
        </Menu>

    </Grid>
</Window>
